<%= simple_form_for incident do |f| %>
  <%= f.input :title %>
  <%= f.input :attachment, as: :file, label: "Upload an attachment" %>
  <%= f.input :date, as: :date, html5: true%>
  <%= f.input :place %>
  <%= f.input :antagonizer %>
  <%= f.input :description %>
  <%= f.submit "Create a new incident", class: 'button-small box-shadow w-100', id: 'show-bottom' %>
<% end %>

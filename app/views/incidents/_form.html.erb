<%= simple_form_for incident do |f| %>
  <%= f.input :title %>
  <%= f.input :attachment, as: :file, label: "Upload an attachment" %>
  <%= f.input :date %>
  <%= f.input :place %>
  <%= f.input :antagonizer %>
  <%= f.input :description %>
  <%= f.submit "Create a new incident", class: 'button-small w-100', id: 'show-bottom' %>
<% end %>
